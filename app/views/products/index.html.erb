<div class="py-10 px-4 sm:px-6 lg:px-8">
  <h1 class="text-2xl font-semibold text-gray-900">Products</h1>

  <div class="my-5">
    <%= link_to 'Add a new Product', new_product_path, class: ' text-indigo-600' %>
  </div>

  <% @products.each do |product| %>
    <p><%= link_to product.name, edit_product_path(product) %></p>
  <% end %>
</div>
